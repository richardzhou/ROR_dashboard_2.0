<div id="greeting"></div>
<div id="secure_logo"><img src="images/secureLogin_2.png"></div>
<div id="secure_login">Secure Login</div>
<div id="please_login"><%= t('.title') %>
    <%= form_tag login_url, :class=>'locale' do %>
        <%= select_tag 'set_locale', options_for_select(LANGUAGES, I18n.locale.to_s), :onchange=>'this.form.submit()' %>
        <%= submit_tag 'submit' %>
        <%= javascript_tag "$('.locale input').hide();" %>
    <% end %>
</div>
<div id="login" class="dashboard_form">
<!--
  <div id="loginerror">
    <% if flash[:alert] %>
        <p id="notice"><%= flash[:alert] %></p>
    <% end %>
  </div>
-->
  <%= show_div_if(flash[:alert].nil?, :id => "login_error") do %>
      username and password not correct!
  <% end %>

  <%= form_tag do %>
      <table>
        <tr>
          <td><label for="username"><%= t('.username') %>:</label></td>
          <td><%= text_field_tag :username, params[:username] %></td>
        </tr>
        <tr>
          <td><br><label for="password"><%= t('.password') %>:</label></td>
          <td><br><%= password_field_tag :password, params[:password] %></td>
        </tr>
        <tr>
          <td></td>
          <td><br><br><%= submit_tag t('.login'), :id=>"login_submit" %></td>
        </tr>
        <tr>
          <td></td>
          <td><br><div id="forget"><a href="javascript:void(0);"><%= t('.forget_password') %>?</a></div></td>
        </tr>
      </table>
<!--
      <fieldset>
        <div>
          <label for="username"><%= t('.username') %>:</label>
          <%= text_field_tag :username, params[:username] %>
        </div>

        <div>
          <label for="password"><%= t('.password') %>:</label>
          <%= password_field_tag :password, params[:password] %>
        </div>

        <div>
          <%= submit_tag "Login" %>
        </div>

      </fieldset>
-->
  <% end %>
