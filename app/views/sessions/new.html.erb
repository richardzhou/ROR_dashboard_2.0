  <div style="position:relative;">
    <div id="forget"><a href="javascript:void(0);"><%= t('.forget_password') %>?</a></div>
  </div>
-->
  <div id="forget_popup" style="display:none;">
    <table>
      <tr><td colspan="2" style="padding-bottom:10px;"><%= t('.passwordRetrievalPrompt') %></td></tr>
      <tr>
        <!--<td class="left">username: </td><td class="right"><input type="text"  id="uname_forget" autocomplete="off" /></td>-->
        <td class="left"><label for="uname_forget"><%= t('.username') %>:</label></td>
        <td class="right"><%= text_field_tag :uname_forget, '', :autocomplete=>'off'  %></td>
      </tr>
      <tr>
        <!--<td class="left">email: </td><td class="right"><input type="email"  id="email_forget" autocomplete="off" /></td>-->
        <td class="left"><label for="email_forget"><%= t('.email') %>:</label></td>
        <td class="right"><%= text_field_tag :email_forget, '', :autocomplete=>'off'  %></td>
      </tr>
      <tr>
        <td>&nbsp;</td>
        <td>
          <button id="retrieve_password" type="submit" value="Send" /><%= t('.send') %></button>
          <button id="cancel_it" type="button" style="margin-left:0px;"><%= t('.cancel') %></button>
        </td>
      </tr>
    </table>
    <div id="sending" style="font-size:10px;font-weight:bold;font-style:italic;padding-left:10px;display:none;"><%= t('.sending') %></div>
  </div>
</div>
