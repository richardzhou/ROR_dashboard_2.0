/* CSS Document */

body,div{
  padding:0px;
  margin:0px;
  color: #000;
  font-family:Arial, Helvetica, sans-serif;
  font-size:15px;
  text-align:center;
}
body{
  background: #1C1C1C url(<%= asset_path('bg_login.jpg') %>) no-repeat top center fixed;/*for browsers that dont support multiple background images*/
  background: url(<%= asset_path('bg_login.jpg') %>) no-repeat top center fixed, url(<%= asset_path('bg_tile.jpg') %>) repeat top left fixed;
}

img{border:none;}

#greeting{
  width: 610px;
  margin: 158px auto 0px;
  text-align:left;
  font-size: 35px;
  color: #FFF;
}

#secure_logo {
  width: 610px;margin:0 auto;text-align:left;margin-top:-12px;
}
#secure_logo img {width:92px;}

#secure_login {
  background-color: #F60;
  background-color: #222;
  width: 610px;
  margin: -53px auto 0; /*margin 8px auto 0*/
  padding: 10px 0px;
  border-radius: 0.5em 0.5em 0em 0em;
  color:#DDD;
  font-size:18px;
  font-weight:bold;
  display:none;
}

#please_login{
  background-color: #F60;
  width: 610px;
  margin: 0px auto;
  margin: -53px auto 0; /*margin 8px auto 0*/
  padding: 10px 0px;
  border-radius: 0.5em 0.5em 0em 0em;
  font-size:18px;
  font-weight:bold;
}

.locale{
  float: right;
  margin-right: 20px;
}

#login{
  width: 610px;
  height: 240px;
  margin: 0px auto 20px;
  padding: 0px auto;
  background-color:#FFF;
  border-radius: 0em 0em 0.5em 0.5em;
}

#login_error {
  padding-top: 17px;
  font-style: italic;
  font-weight: bold;
  color: #F33;
  visibility:hidden;
}


input{
  width: 360px;
  height: 28px;
  border: 1px #666 solid;
}

table{margin:0px auto;}
tr {margin: 8px auto;}

#login_submit{
  border-radius: 0.3em;
  width: 360px;

}

#signup{
  font-size: 12px;
  left: 158px;
  position: absolute;
  background-color:#FFF;
  text-decoration:none;
}

#forget{
  font-size: 12px;
  background-color: #FFF;
  text-decoration: none;
  float: right;
}

#forget_popup {
  border:1px solid #F60;
  background-color: #eee;
  width:340px;
  color:#222;
  position:absolute;
  left:600px;
  top: 270px;
  padding:10px;
  border-radius:5px;
}
#forget_popup td {}
#forget_popup td.left {text-align:right;}
#forget_popup td.right {text-align:left;}

#uname_forget, #email_forget {width:180px;height:24px;}

a{
  text-decoration:none;
  color:#F60;
}
